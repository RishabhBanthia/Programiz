Example 1: Half Pyramid of *
*
* *
* * *
* * * *
* * * * *

#include <stdio.h>
int main() 
{
   int i, j, rows;
   printf("Enter the number of rows: ");
   scanf("%d", &rows);
   for (i = 1; i <= rows; ++i) 
   {
      for (j = 1; j <= i; ++j) 
      {
         printf("* ");
      }
      printf("\n");
   }
   return 0;
}




Example 2: Inverted half pyramid of *
* * * * *
* * * *
* * * 
* *
*

#include <stdio.h>
int main() 
{
   int i, j, rows;
   printf("Enter the number of rows: ");
   scanf("%d", &rows);
   for (i = rows; i >= 1; --i) 
   {
      for (j = 1; j <= i; ++j) 
      {
         printf("* ");
      }
      printf("\n");
   }
   return 0;
}






Example 3: Full Pyramid of *
        *
      * * *
    * * * * *
  * * * * * * *
* * * * * * * * *

#include <stdio.h>
int main() 
{
   int i, space, rows, k = 0;
   printf("Enter the number of rows: ");
   scanf("%d", &rows);
   for (i = 1; i <= rows; ++i, k = 0) 
   {
      for (space = 1; space <= rows - i; ++space) 
      {
         printf("  ");
      }
      while (k != 2 * i - 1) 
      {
         printf("* ");
         ++k;
      }
      printf("\n");
   }
   return 0;
}





Example 4: Inverted full pyramid of *
* * * * * * * * *
  * * * * * * *
    * * * * *
      * * *
        *
C Program

#include <stdio.h>
int main() 
{
   int rows, i, j, space;
   printf("Enter the number of rows: ");
   scanf("%d", &rows);
   for (i = rows; i >= 1; --i) 
   {
      for (space = 0; space < rows - i; ++space)
         printf("  ");
      for (j = i; j <= 2 * i - 1; ++j)
         printf("* ");
      for (j = 0; j < i - 1; ++j)
         printf("* ");
      printf("\n");
   }
   return 0;
}
